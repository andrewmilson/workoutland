<?xml version='1.0' encoding='utf-8'?>
<widget
  id="com.andrewmilson.workoutland"
  version="1.0"
  android-versionCode="1"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Workout Land</name>
    <description>Workout timer + planner</description>
    <author href="http://andrewmilson.com">Andrew Milson</author>

    <content src="index.html" />
    <icon src="./icon.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />

    <preference name="Orientation" value="portrait"/>
    <preference name="webviewbounce" value="true"/>
    <preference name="disallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <access origin="geo:*" launch-external="yes"/>
    <access origin="mailto:*" launch-external="yes"/>
    <access origin="http://maps.google.com/*" launch-external="yes"/>
    <access origin="http://*" launch-external="yes"/>
    <access origin="https://*" launch-external="yes"/>

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <access origin="*" />
</widget>
